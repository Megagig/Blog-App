<%= render "shared/header" %>
<div class="posts-container">
  <div class="posts-header">
    <img src="<%= @user.photo %>" alt="user photo">
    <div>
      <h2>Name: <%= @user.name %></h2>
      <h4>Number of posts: <%= @user.posts_counter %></h4>
    </div>
  </div>
  
  <% @posts.each do |post| %>
    <div class="all-posts-container">
      <div class="all-posts">
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
        <div>
          <span>Comments: <%= post.comments_counter %></span>
          <span>Likes: <%= post.likes_counter %></span>
          <h5>
            <%= link_to "Read post", user_post_path(@user, post) %>
          </h5>
        </div>
      </div>
    </div>
    
    <div class="recent-comments-container">
      <h3>Recent Comments</h3>
      <% post.five_most_recent_comments.each do |comment| %>
        <p><strong><%= comment.user.name %>:</strong> <%= comment.text %></p>
      <% end %>
    </div>
    
  <% end %>
</div>

<%= form_with(model: @post, url: user_posts_path(@user), method: :post) do |form| %>
  <h2>Create a new post</h2>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :text %>
  <%= form.text_area :text %><br>

  <%= form.submit "Create Post" %><br>
<% end %>
<button type="button">Pagination</button>

<%= render "shared/footer" %>
